#### Start of configuration section ####

SRCDIR	= @top_srcdir@
#OBJDIR	= @top_objdir@
OBJDIR	= ../../../..

prefix = @prefix@
exec_prefix = @exec_prefix@

include $(OBJDIR)/GNUmakeconf

##### End of configuration section #####

ifndef TPZ_HOME
  # GNU Make 3.78 provides $(error ...), but the following works, too.
  error :=$(shell echo >&2 You must define the TPZ_HOME environment variable.)
  error
endif
ifndef MYRI_HOME
  # GNU Make 3.78 provides $(error ...), but the following works, too.
  error :=$(shell echo >&2 You must define the MYRI_HOME environment variable.)
  error
endif

TARGET = libflick-trapeze.a
SECTIONS += runtime/libraries/link/trapeze

INCDIRS += $(OBJDIR)/runtime/headers \
	   $(SRCDIR)/runtime/headers \
	   $(SRCDIR)/runtime/libraries/link \
	   $(TPZ_HOME)/include \
	   $(MYRI_HOME)/include

# XXX - defines for Trapeze headers.
TPZ_ARCH := $(shell $(TPZ_HOME)/arch.sh)
DEFINES += -D$(TPZ_ARCH)

include $(SRCDIR)/runtime/GNUmakerules.lib

## End of file.

